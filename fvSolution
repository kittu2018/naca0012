FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          1e-06;
        smoother        GaussSeidel;
        nPreSweeps	 0;
        nPostSweeps	 2;
        cacheAgglomeration  on;
        agglomerator faceAreaPair;
        nCellsInCoarsestLevel  10;
        mergeLevels     1;
    }

    "(U|k|epsilon|omega|R|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;
    }
}

relaxationFactors
{
    fields
    {
        p		 0.3;
    equations
    {
        U               0.7;
        k		 0.7;
        omega 		 0.7;
        epsilon 	 0.7;
        R 		 0.7;
        nuTilda         0.7;
    }
}


